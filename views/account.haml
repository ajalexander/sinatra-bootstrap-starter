.container
  .row
    .col-sm-12
      .panel.panel-default
        .panel-heading
          .panel-title
            Account Settings
        .panel-body
          %form{method: 'post', role: 'form', action: '/account'}
            .form-group
              %label{for: 'email_address'} Email Address
              %input{name: 'email_address', type: 'email', class: 'form-control', required: true, value: @model.email_address}

            %button{type: 'submit', class: 'btn btn-default'}
              Save

      .panel.panel-default
        .panel-heading
          .panel-title
            Change Password
        .panel-body
          %form{method: 'post', role: 'form', action: '/password'}
            .form-group
              %label{for: 'current_password'} Current Password
              %input{name: 'current_password', type: 'password', class: 'form-control', required: true, placeholder: 'Enter your current password'}
            .form-group
              %label{for: 'new_password'} New Password
              %input{name: 'new_password', type: 'password', class: 'form-control', required: true, placeholder: 'Enter the new password'}
            .form-group
              %label{for: 'new_password_confirmation'} Confirm Password
              %input{name: 'new_password_confirmation', type: 'password', class: 'form-control', required: true, placeholder: 'Enter the new password again'}

            %button{type: 'submit', class: 'btn btn-default'}
              Change Password